<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    app:cardCornerRadius="20dp"
    app:cardBackgroundColor="@color/blue_card_background"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/devImgRec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_device_unknown_24"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:id="@+id/device_name"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            app:layout_constraintLeft_toRightOf="@id/devImgRec"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="24sp"
            android:layout_marginStart="30dp"
            android:text="Name"
            />
        <TextView android:id="@+id/device_serialnumber"
            android:layout_width="match_parent"
            app:layout_constraintLeft_toRightOf="@id/devImgRec"
            app:layout_constraintRight_toRightOf="parent"
            android:text="152156115122"
            android:textColor="@color/white"

            android:layout_marginStart="30dp"
            app:layout_constraintTop_toBottomOf="@+id/device_name"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            />
        <TextView android:id="@+id/device_rssi"
            app:layout_constraintTop_toBottomOf="@+id/device_serialnumber"
            android:layout_width="match_parent"
            android:textColor="@color/white"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/devImgRec"
            android:layout_marginStart="30dp"
            android:text="Signal Strength: 99"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

